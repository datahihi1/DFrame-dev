#!/usr/bin/env php
<?php
/*
|--------------------------------------------------------------------------
| DFrame CLI Define Constants
|--------------------------------------------------------------------------
*/

define('ROOT_DIR', __DIR__ . '/');
define('INDEX_DIR', __DIR__ . '/public/');

/*
|--------------------------------------------------------------------------
| Autoload File
|--------------------------------------------------------------------------
*/
require_once __DIR__ . '/vendor/autoload.php';

use DFrame\Reports\Report;
use DFrame\Application\App;

/*
|--------------------------------------------------------------------------
| Thiết lập hệ thống báo cáo lỗi cho CLI
|--------------------------------------------------------------------------
*/
Report::setup(true, INDEX_DIR . 'logs/cli.log', Report::cli());

/*|--------------------------------------------------------------------------
| Khởi động ứng dụng DFrame
|--------------------------------------------------------------------------
*/
App::initialize()->bootDli();
