{
    "name": "datahihi1/dframe",
    "description": "This is a PHP framework created by Datahihi1.",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.0",
        "ext-openssl": "*",
        "ext-pdo": "*",
        "ext-mbstring": "*",
        "eftec/bladeone": "^4",
        "twig/twig": "^3",
        "datahihi1/tiny-env": "^1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "DFrame\\": "src/"
        },
        "files": [
            "src/Application/helper/cli.php",
            "src/Application/helper/helper.php",
            "src/Application/helper/source.php",
            "src/Application/helper/TokenGenerator.php",
            "src/Kit/dump/var_dump.php",
            "src/Kit/helper/html_helper.php",
            "src/Kit/helper/default_pages.php"
        ]
    },
    "scripts": {
        "CopyEnv": "@php -r \"if (file_exists('.env.test') && !file_exists('.env')) copy('.env.test', '.env');\"",
        "post-install-cmd": [
            "@CopyEnv"
        ],
        "post-update-cmd": [
            "@CopyEnv"
        ],
        "post-create-project-cmd": [
            "@CopyEnv"
        ]
    }
}
